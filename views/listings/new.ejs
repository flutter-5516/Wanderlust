<% layout("/layouts/boilerplate.ejs")%>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br />
      <!-- margin from left means offset-2 -->
      <h1>Create a New Listings</h1>
      <!-- no validation is added in bootstrap and a in public folder js file to implement bootstrao features -->
      <form
        method="post"
        action="/listings"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="title"
            placeholder="Add a Catchy Title   "
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="description" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image Link</label>
          <input
            name="image"
            placeholder="Enter image URL/Link"
            class="form-control"
          />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="price"
              placeholder="â‚¹1,200"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter valid price</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              name="country"
              placeholder="India"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter the country name</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="location"
            placeholder="Jaipur,Rajasthan "
            class="form-control"
            required
          />
         <div class="invalid-feedback">Please enter valid location </div>
        </div>

        <button class="btn btn-dark offset-5 add-btn" type="submit">Add</button>
        <br />
        <br />
      </form>
    </div>
  </div>
</body>

