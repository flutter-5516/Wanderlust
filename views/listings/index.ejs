<% layout("/layouts/boilerplate.ejs")%>
<body>
  <h1>All Listings</h1>
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <%for(let listing of allListings){ %>
    <a class="items"  href="/listings/<%=listing._id%>">
      <div class="card col">
        <img
          src="<%=listing.image%>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%></b>
            <br />
            â‚¹<%=listing.price.toLocaleString("en-IN")%>/night
          </p>
        </div>
      </div>
      <%}%>
    </a>
  </div>

